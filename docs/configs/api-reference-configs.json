{
  "balance": {
    "getNativeBalance": {
      "description": "Get the native balance for a specific wallet address.",
      "method": "GET",
      "path": "/{address}/balance",
      "pathParams": [
        {
          "name": "address",
          "description": "The address from which the native balance will be checked",
          "required": true,
          "example": "0x057Ec652A4F150f7FF94f089A38008f49a0DF88e",
          "type": "string"
        }
      ],
      "queryParams": [
        {
          "name": "chain",
          "description": "The chain to query",
          "required": false,
          "example": "eth",
          "type": "string",
          "enum": [
            "eth",
            "0x1",
            "goerli",
            "0x5",
            "sepolia",
            "0xaa36a7",
            "polygon",
            "0x89",
            "mumbai",
            "0x13881",
            "bsc",
            "0x38",
            "bsc testnet",
            "0x61",
            "avalanche",
            "0xa86a",
            "avalanche testnet",
            "0xa869",
            "fantom",
            "0xfa",
            "palm",
            "0x2a15c308d",
            "cronos",
            "0x19",
            "cronos testnet",
            "0x152",
            "arbitrum",
            "0xa4b1"
          ]
        },
        {
          "name": "providerUrl",
          "description": "The web3 provider URL to use when using local dev chain",
          "required": false,
          "type": "string"
        },
        {
          "name": "to_block",
          "description": "The block number from which the balances should be checked",
          "required": false,
          "type": "number"
        }
      ],
      "responses": {
        "200": {
          "description": "Returns the native balance for a specific address",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/nativeBalance" }
            }
          }
        }
      }
    }
  }
}
