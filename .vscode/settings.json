{
  "grammarly.files.include": [
    "**/readme.md",
    "**/README.md",
    "**/*.txt",
    "**/*.md",
    "**/*.mdx"
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "markdown"
  ],
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": ["source.formatDocument", "source.fixAll.eslint"],
  "grammarly.startTextCheckInPausedState": true,
  "grammarly.config.suggestions.OxfordComma": true,
  "grammarly.config.documentDomain": "business",
  "markdown.validate.ignoredLinks": [
    "/web3-data-api/aptos/reference/get-coin-balances-by-wallets",
    "/web3-data-api/aptos/reference/get-nft-collections-by-creator",
    "/web3-data-api/aptos/reference/get-account-transactions",
    "/web3-data-api/aptos/reference/get-transactions",
    "/web3-data-api/aptos/reference/get-coins-by-creators",
    "/web3-data-api/aptos/reference/get-latest-coins",
    "/web3-data-api/evm/nft-spam-detection"
  ],
  "eslint.workingDirectories": [".eslintrc", ".eslintignore"]
}
